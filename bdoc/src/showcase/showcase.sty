%%%
% The variables ``\l_bdoc_tmpa_box`` and ``\l_bdoc_rule_dim`` are used by
% the macro ``\bdocruler`` to calculate the width of the two rules drawn
% by this macro.
%%%
\box_new:N \l_bdoc_tmpa_box
\dim_new:N \l_bdoc_rule_dim


%%%
% prototype::
%     #1 : a text
%
%     :action: this macro adds two horizontal rules on both sides of the text.
%              The final output is centered.
%%%
\NewDocumentCommand{ \bdocruler } { m } {
    \par
    {
        \centering
            \scriptsize
            \itshape
            \bfseries
            \color{cyan!50!black}

            \hbox_set:Nn \l_bdoc_tmpa_box { \,\, #1 \,\, }
            \dim_set:Nn  \l_bdoc_rule_dim {
                .35 \linewidth - .5 \box_wd:N \l_bdoc_tmpa_box
            }

            \rule[.75pt] { \dim_use:N \l_bdoc_rule_dim } { 2.5pt }
            \box_use:N \l_bdoc_tmpa_box
            \rule[.75pt] { \dim_use:N \l_bdoc_rule_dim } { 2.5pt }
        \par
    }
}


%%%
% prototype::
%     #1 : the text indicating the begin of the real render
%     #2 : the text indicating the end of the real render
%
%     :action: this environment adds a page-width cyan stripe in the background
%              of the content of the environment.
%
% note::
%     The stripe is preceded and followed by centered materials produced by
%     the macro ``\bdocruler`` such as to stress the start and the end of
%     the content.
%%%
\NewDocumentEnvironment{ bdocshowcase } {
    D<>{\bdoc@trans@real@output@start}
    D<>{\bdoc@trans@real@output@end}
} {
    \begin{colorstrip}{cyan!5}
        \bdocruler{#1}
        \medskip
} {
        \medskip
        \bdocruler{#2}
    \end{colorstrip}
}

\ExplSyntaxOff
