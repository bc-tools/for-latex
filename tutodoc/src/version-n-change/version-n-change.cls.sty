% :: GENERIC TOPIC :: %

\tl_new:N \l_tutodoc_topic_when_color_tl
\tl_new:N \l_tutodoc_topic_date_tl
\tl_new:N \l_tutodoc_topic_version_tl

\keys_define:nn { tutodoc / version-n-change / topic / options } {
