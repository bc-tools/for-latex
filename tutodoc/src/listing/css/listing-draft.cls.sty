\tcbset{
  tutodoc-latex-listing-style/.style = {
    minted language = latex,
    minted style    = bw,
    breakable,
    enhanced,
% Code and output
    colback  = mycolback,
    colframe = black,
% Padding
    left   = 1mm,
    right  = 1mm,
    bottom = 1mm,
    top    = 1mm,
% Frame
    shadow     = {0mm}{0mm}{0mm}{black},
    arc        = 0pt,
    leftrule   = 0pt,
    rightrule  = 0pt,
    bottomrule = .75pt,
    toprule    = .75pt,
% Separating line
    segmentation style = {
      black,
      dash pattern = {on 5pt off 2.5pt},
      line width   = .75pt
    },
    #1
  },
}
