\cs_new:Nn \__bdoc_translate_date:n {
  \regex_match:nnTF { \A \d{1,4} \- \d{2} \- \d{2} \Z } { #1 }{
    \__bdoc_translate_date_process:w #1 \q_stop
  }{
    \msg_error:nn { bdoc } { date-bad-format }
